{
  "api": {
    "tls_hostname": "{{ env:ZENTRAL_URL }}",
    "tls_server_certs": "/zentral/conf/start/docker/tls/zentral_fullchain.crt",
    "secret": "{{ env:ZENTRAL_API_SECRET }}"
  },
  "extra_links": [
    {
      "anchor_text": "Prometheus",
      "url": "{{ env:ZENTRAL_PROM_URL }}"
    }
  ],
  "django": {
    "SECRET_KEY": "{{ env:DJANGO_SECRET }}",
    "DEBUG": true,
    "MEDIA_ROOT": "/var/zentral",
    "ADMINS": [
      [
        "Admin",
        "changethis@example.com"
      ]
    ],
    "SERVER_EMAIL": "changethis@example.com",
    "DEFAULT_FROM_EMAIL": "changethis@example.com",
    "ALLOWED_HOSTS": [
      "*"
    ],
    "POSTGRES_HOST": "{{ env:POSTGRES_HOST }}",
    "POSTGRES_PASSWORD": "{{Â env:POSTGRES_PASSWORD }}"
  },
  "queues": {
    "backend": "zentral.core.queues.backends.kombu",
    "backend_url": "{{ env:RABBIT_MQ_CONN }}"
  },
  "stores": {
    "elasticsearch": {
      "frontend": true,
      "backend": "zentral.core.stores.backends.elasticsearch",
      "hosts": [
        "{{ env:ES_URL }}"
      ],
      "index": "zentral-events",
      "kibana_base_url": "{{ env:KIBANA_URL }}"
    }
  },
  "processor_workers": {
    "number": 1,
    "prometheus_server_base_port": "8100"
  },
  "actions": {
    "debug": {
      "backend": "zentral.core.actions.backends.json_file",
      "local_dir": "/tmp/zentral_notifications/"
    }
  },
  "apps": {
    "zentral.contrib.audit": {},
    "zentral.contrib.jamf": {},
    "zentral.contrib.simplemdm": {},
    "zentral.contrib.munki": {},
    "zentral.contrib.nagios": {},
    "zentral.contrib.inventory": {
      "prometheus_bearer_token": "{{ env:PROMETHEUS_BEARER_TOKEN }}",
      "clients": []
    },
    "zentral.contrib.osquery": {},
    "zentral.contrib.puppet": {
      "instances": [
        {
          "puppetdb_url": "http://puppetdb:8080",
          "puppetboard_url": "https://puppetboard.local",
          "business_unit_fact_key": "my_custom_fact_customer",
          "group_fact_keys": [
            "my_custom_fact_site_id",
            "my_custom_fact_customer_environment"
          ],
          "extra_fact_keys": [
            "os.hardware",
            "kernel"
          ]
        }
      ]
    },
    "zentral.contrib.santa": {}
  }
}
